{
  "compilerOptions": {
      "target": "esnext",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
          "assets/*": ["src/assets/*"],
          "components/*": ["src/components/*"],
          "hooks/*": ["src/hooks/*"],
          "pages/*": ["src/pages/*"],
          "root/*": ["src/*"],
      }
  },
  "exclude": ["node_modules", "dist"]
}